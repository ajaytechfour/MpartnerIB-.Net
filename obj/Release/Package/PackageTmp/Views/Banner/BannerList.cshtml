@using PagedList;
@using PagedList.Mvc;
@model  IPagedList<Luminous.EF.Banner>



@{
    ViewBag.Title = "BannerList";
    Layout = "~/Views/Shared/Security.cshtml";
}
<link href="../../assets/css/Formstyle.css" rel="stylesheet" type="text/css" />
<script src="../../assets/js/jquery-1.10.2.js" type="text/javascript"></script>
<script type="text/javascript">
    function Delete(id) {
        debugger;
        if (confirm("Do You Want To Delete The Record")) {
            debugger;
            $.post("../Banner/Delete/", { id: id }, function (data) {
                alert(data);
                location.href = "../../Banner/Bannerlist";
            }, "Json");
        }

    }
    function a() {
        alert("asfD");
    }
</script>

@section Header
{
Banner List
}
@Html.ActionLink("Create New Banner", "Index", null, new { style="font-size: 18px;color: white;background-color: #4B99AD;"})
<div id="list">
<table id="Grid"  class="layout display responsive-table">
<thead>
<tr>
<th>
Banner Header
</th>
<th>
Sub Header
</th>
<th>
Discriptions
</th>
<th>
Start Date
</th>
<th>
End Date
</th>
<th>
Status
</th>
<th>
Image
</th>
<th>
Action
</th>
</tr>
</thead>
@foreach (var banner in Model)
{ 
<tr>
<td class="organisationname">
@Html.DisplayFor(model => banner.Header_Details)
</td>
<td class="organisationname">
@Html.DisplayFor(model => banner.Sub_Header_Details)
</td>
<td id="HideDetails" class="organisationname">
@Html.DisplayFor(model => banner.Banner_Details)
</td>
<td class="organisationname">

@Html.DisplayFor(model => banner.stardate)
</td>
<td class="organisationname">
@Html.DisplayFor(model => banner.ExpriyDate)
</td>
<td class="organisationname">

@Html.DisplayFor(model => banner.BStatus)
</td>

<td class="organisationname">
<img src="~/Banners/@banner.BannerImage" style="height: 52px;width: 53px;" title="@banner.BannerFileName" />
</td>
<td class="actions">
@Html.ActionLink("Edit", "Edit", new { id = banner.id })

<a onclick="Delete(@banner.id);" style="cursor:pointer">Delete</a>
</td>
</tr>
}
</table>
</div>

@Html.PagedListPager(Model, page => Url.Action("BannerList", new { page }), new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded })


