<script type="text/javascript">
    $(function () {
        if (@ViewBag.status == 1) {
        debugger;
            $("#statusCc").prop("checked", "checked");
        }
        @*if (@ViewBag.Alertstatus == 1) {
            debugger;
            $("#statusDd").prop("checked", "checked");
        }*@
        if ('@ViewBag.Result' != "") {
            debugger;
            alert('@ViewBag.Result');
            location.href = "@Url.Content("~/ProductLevelThree/index")";
        }
    });
    function Cancel() {
        location.href = "@Url.Content("~/ProductCategory/index")";
    }
</script>





<div id="page-wrapper" style="background: #f2f4f8;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="pageHeading"><span>Alert Notification - </span> Edit Alert Notification</h1>
        </div>
    </div>
    <div id="form" style="margin-bottom: 11px">
        @using (Html.BeginForm("Update", "AlertNotification", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="aos-init aos-animate" data-aos="fade-up" data-aos-duration="2500" id="content_wrap">
                    <div class="addgift" style="padding-bottom: 10px;">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label> Text <span class="required">*</span> @Html.HiddenFor(a => a.id)</label>
                                    @Html.TextAreaFor(a => a.C_text, 5, 50, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(a => a.C_text, "", new { @class = "required" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <a href="@Url.Content("~/AlertNotification/EditReciverList/")@Model.id" )" style="color:#EA7272;text-decoration: underline;">Permission</a>
                                </div>
                            </div>
                            <div class="" style="height:1px; width:100%; float:left; display:block;"></div>
                            <div class="col-md-4">
                                <div class="">
                                    <label>Upload Image <span class="required">*</span></label>
                                    <input type="file" name="postedFile" style="border:none;" />
                                    <span id="file" class="required"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="">
                                    <label style="width:100%;">Previous Image</label>
                                    <img src="@Url.Content("~/NotificationImage/")@Model.Imagepath" title="@Model.Imagename" style="width:100px; height:100px" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="">
                                    <label>Status</label>
                                    <input type="checkbox" id="statusCc" name="statusC" />
                                </div>
                            </div>
                            <div class="col-md-12">
                                <input type="submit" value="Submit" class="submitBtn" style="margin-bottom:20px;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="space30"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="footerRow">
                © Copyright 2019 LuminousMpartnerIB | All Rights Reserved
            </div>
        </div>
    </div>

</div>
