                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Gift Name<span>*</span></label>
                                    @Html.HiddenFor(a => a.GiftId)
                                    @Html.TextBoxFor(a => a.GiftName, new { @class = "form-control", @placeholder = "Enter gift name" })
                                    @Html.ValidationMessageFor(a => a.GiftName, "", new { @class = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Gift Description<span>*</span></label>
