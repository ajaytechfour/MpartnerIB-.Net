 <div id="page-wrapper" style="background: #f2f4f8;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="pageHeading"><span></span>@Luminous.Resource.ContactUs</h1>
        </div>
    </div>


     <div class="row">
         <div class="aos-init aos-animate">
             <div class="addgift" style="padding-bottom: 10px;">
                 <div class="">
                     <div id="list" class="tabelGridRow">
                         <table id="GridView" class="tabelGridRow2" style="width:100%; display:inline-table;">
                             <thead>
                                 <tr>
                                     <th>
                                         @Luminous.Resource.CustomerName
                                     </th>

                                     <th>
                                         @Luminous.Resource.Email
                                     </th>
                                     <th>
                                         @Luminous.Resource.Message
                                     </th>
                                     <th>
                                         @Luminous.Resource.CreatedBy
                                     </th>
                                     <th>
                                         @Luminous.Resource.Attachment
                                     </th>
                                 </tr>
                             </thead>
                             <tbody>
                                 @foreach (var suggestion in Model)
                                 {
                                     
                                     <tr>
                                         <td>
                                             @Html.DisplayFor(model => suggestion.CustName)
                                         </td>
                                         <td>
                                             @Html.DisplayFor(model => suggestion.Email)
                                         </td>
                                         <td>
                                             @Html.DisplayFor(model => suggestion.Suggestion1)
                                         </td>
                                         <td>
                                             @Html.DisplayFor(model => suggestion.createdBy)
                                         </td>
                                         @if(@suggestion.ImageName.Contains("/image"))
                                         {
                                            // var v = @suggestion.ImageName.Substring(1, 1);
                                             var v = @suggestion.ImageName;
                                             var s = v.Split('/');
                                            
                                         <td>
                                             <a id='' href='~/SuggestionImage/@s[4]' target="_blank">@Luminous.Resource.Download</a>
                                         </td>
                                            
                                         }
                                         else
                                         {
                                            <td>
                                                
                                            </td>

                                         }
                                     </tr>
                                 }
                             </tbody>
                             <tfoot>
                                 <tr>
                                     <td colspan="4" style="border:none;padding-left: 0px;">
                                         @Html.PagedListPager(Model, page => Url.Action("SuggestionList", new { page }), new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded })
                                     </td>
                                 </tr>
                             </tfoot>
                         </table>

                     </div>
                 </div>
             </div>
         </div>
     </div>







  

</div>