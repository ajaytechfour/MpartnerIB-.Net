                $("#lblmessagesubmit").text("Please fill Distributor Address");
                return false;
            }

            if ($('#ddlStateMaster').val() == 0 || $('#ddlStateMaster option:selected').val() == 0) {
                $("#lblmessagesubmit").text("Please select State");
                return false;
            }

            if ($('#ddlCityMaster').val() == 0 || $('#ddlCityMaster option:selected').val() == 0) {
                $("#lblmessagesubmit").text("Please select City");
                return false;
            }


            if ($("#ContactNo").val() == "") {
                $("#lblmessagesubmit").text("Please fill Contact No.");
                return false;
            }

            if ($("#Email").val() == "") {
                $("#lblmessagesubmit").text("Please fill Email");
                return false;
            }

            var email = $('#Email').val();

            //if (IsEmail(email) == false) {
            //    $('#invalid_email').show();
            //    return false;
            //}


            var objdata = new Object();


            objdata.Name = $('#DistributorName').val();
            objdata.Address = $('#DistributorAddress').val();
            objdata.ContactNo = $('#ContactNo').val();
            objdata.Email = $('#Email').val();

            objdata.State = $('#ddlStateMaster option:selected').text();
            objdata.City = $('#ddlCityMaster option:selected').text();


            //debugger;
            $.ajax({
                url: "/Distributor/saveData",
                type: "POST",
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify({ obj: objdata }),
                datatype: "json",
                success: function (data) {
                    debugger;
                    if (data != "") {
                        debugger;
                        //var result = JSON.parse(data);
                        //alert(result);
                        $('#lblmessagesuccess').text("");

                        if (data.Message != "") {

                            $('#lblmessagesuccess').text(data.Message);

                            $('#ddlStateMaster').val(0);
                            $('#ddlCityMaster').val(0);
                            $('#DistributorName').val('');
                            $('#DistributorAddress').val('');
                            $('#ContactNo').val('');
                            $('#Email').val('');

                            SetGrid(data);

                        }

                        if (data.MessageExist != "") {
                            $('#lblmessagesuccess').text(data.MessageExist);
                        }

                    }
                },
                error: function (errormessage) {
                    debugger;
                    alert(errormessage.responseText);
                }
            });



         });



    });


