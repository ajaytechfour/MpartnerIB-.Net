<script type="text/javascript">
   
     
  
    $(function () {

        $(".date").datepicker(
  { dateFormat: "dd-mm-yy" }
     );
        ValidationMessage();
      
        $("#survey").click(function () {
            $("#surveylbl").show();
            $("#surveytxt").show();
            $("#contdrop").hide();
            $("#contname").hide();
            $("#Text").show();
            $("#spntxt").show();
            $("#Grid").show();
            $("#Grid_contest").hide();
            
        });
        $("#contest").click(function () {
            $("#contdrop").show();
            $("#contname").show();
            $("#surveylbl").hide();
            $("#surveytxt").hide();
            $("#Text").hide();
            $("#spntxt").hide();
            $("#Grid").hide();
            $("#Grid_contest").show();
            
        });
        if ('@ViewBag.ContestData' == 'Contest') {
          
            $("#contest").prop("checked", "checked");
            $("#survey").hide();
            $("#surveyid").hide();
        
            $("#contdrop").show();
            $("#contname").show();
            $("#surveylbl").hide();
            $("#surveytxt").hide();
            $("#Text").hide();
            $("#spntxt").hide();
         

        } if ('@ViewBag.ContestData' == 'Survey') {

          
            $("#survey").prop("checked", "checked");
            $("#contest").hide();
            $("#contestid").hide();
            
            $("#surveylbl").show();
            $("#surveytxt").show();
            $("#contdrop").hide();
            $("#contname").hide();
            $("#Text").show();
            $("#spntxt").show();
           
        }
        //$("#MCQ").prop("readonly", true)
        //$("#Text").prop("readonly", true)
        $("#Text").click(function () {
            $("#OptionA").prop("disabled", true);
            $("#OptionB").prop("disabled", true);
            $("#OptionC").prop("disabled", true);
            $("#OptionD").prop("disabled", true);
            $("#OptionE").prop("disabled", true);
            $("#OptionAAns").prop("disabled", true);
            $("#OptionBAns").prop("disabled", true);
            $("#OptionCAns").prop("disabled", true);
            $("#OptionDAns").prop("disabled", true);
            $("#OptionEAns").prop("disabled", true);
           
        })
        $("#MCQ").click(function () {
            $("#OptionA").prop("disabled", false);
            $("#OptionB").prop("disabled", false);
            $("#OptionC").prop("disabled", false);
            $("#OptionD").prop("disabled", false);
            $("#OptionE").prop("disabled", false);
            $("#OptionAAns").prop("disabled", false);
            $("#OptionBAns").prop("disabled", false);
            $("#OptionCAns").prop("disabled", false);
            $("#OptionDAns").prop("disabled", false);
            $("#OptionEAns").prop("disabled", false);

        })
        if ('@ViewBag.status' == 1) {
            $("#statusC").prop("checked", "checked");
        }

        if ('@ViewBag.Questypemcq' == 'MCQ') {
           
            $("#MCQ").prop("checked", "checked");
            $("#OptionA").prop("disabled", false);
            $("#OptionB").prop("disabled", false);
            $("#OptionC").prop("disabled", false);
            $("#OptionD").prop("disabled", false);
            $("#OptionE").prop("disabled", false);

            $("#OptionAAns").prop("disabled", false);
            $("#OptionBAns").prop("disabled", false);
            $("#OptionCAns").prop("disabled", false);
            $("#OptionDAns").prop("disabled", false);
            $("#OptionEAns").prop("disabled", false);
        }
        if ('@ViewBag.Questypetext' == 'Text') {
            $("#Text").prop("checked", "checked");
            $("#OptionA").prop("disabled", true);
            $("#OptionB").prop("disabled", true);
            $("#OptionC").prop("disabled", true);
            $("#OptionD").prop("disabled", true);
            $("#OptionE").prop("disabled", true);
            $("#OptionAAns").prop("disabled", true);
            $("#OptionBAns").prop("disabled", true);
            $("#OptionCAns").prop("disabled", true);
            $("#OptionDAns").prop("disabled", true);
            $("#OptionEAns").prop("disabled", true);
        }
        
      

            if('@ViewBag.CorrectAns'=='OptionA')
            {
                
                $("#OptionAAns").prop("checked", "checked");
            }
            if ('@ViewBag.CorrectAns' == 'OptionB') {
                $("#OptionBAns").prop("checked", "checked");
            }
            if ('@ViewBag.CorrectAns' == 'OptionC') {
                $("#OptionCAns").prop("checked", "checked");
            }
            if ('@ViewBag.CorrectAns' == 'OptionD') {
                $("#OptionDAns").prop("checked", "checked");
            }
            if ('@ViewBag.CorrectAns' == 'OptionE') {
                $("#OptionEAns").prop("checked", "checked");
            }
           // $("#Text").prop("checked", "checked");
        
        if ('@ViewBag.Correctans' == 1) {
            $("#statusC").prop("checked", "checked");
        }
    
        if ('@ViewBag.Result' != "") {
            debugger;
            alert('@ViewBag.Result');
            location.href = "@Url.Content("~/NotificationSurvey/index")";
        }
        
    });

   

    function Cancel() {
        location.href = "@Url.Content("~/NotificationSurvey/index")";
    }
   
   
   


</script>
<script type="text/javascript">
    function ValidationMessage() {
        if ('@ViewBag.StartDate' != "") {
            $("#sdate").text('@ViewBag.StartDate');
        }

        if ('@ViewBag.EndDate' != "") {
            $("#edate").text('@ViewBag.EndDate');
        }




        $("#stdate").val('@ViewBag.preStartDate');
        $("#etdate").val('@ViewBag.PreEndDate');

    }
</script>


<div id="page-wrapper" style="background: #f2f4f8;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="pageHeading"><span>Survey/Contest Poll log - </span> Edit Survey</h1>
        </div>
    </div>

    @using (Ajax.BeginForm("Update", new AjaxOptions { HttpMethod = "get", UpdateTargetId = "d", InsertionMode = InsertionMode.Replace }, new AjaxOptions() {/*some options*/}, new { enctype = "multipart/form-data" }))
    {

        <div class="row">
            <div class="aos-init aos-animate" data-aos="fade-up" data-aos-duration="2500">
                <div class="addgift" style="padding-bottom: 10px;" id="GridView">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="">
                                @Html.HiddenFor(model => model.SurveyID)
                                @Html.HiddenFor(model => model.ContestId)
                                <label style="display:block;">Contest Type<span class="required">*</span></label>
                                @Html.RadioButton("contesttype", "Survey", new { id = "survey", @style = "border:none; Height:inherit" }) <span id="surveyid" style="margin-right:15px;">Survey</span>
                                @Html.RadioButton("contesttype", "Contest", new { id = "contest", @style = "border:none; Height:inherit" }) <span id="contestid">Contest</span>
                            </div>
                        </div>
                        <div class="col-md-3" id="surveylbl">
                            <div class="">
                                <label id="">Survey Name<span class="required">*</span></label>
                                <div class="" id="surveytxt">
                                    @Html.TextBoxFor(a => a.Survey, new { @class = "form-control" })
                                    <br />
                                    @Html.ValidationMessageFor(a => a.Survey, "", new { @class = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="">
                                <label id="contname">Contest Name<span class="required">*</span></label>
                                <div class="" id="contdrop">
                                    @Html.DropDownList("Type", ViewBag.contest as SelectList, "Select Contest", new { id = "drpType", @class = "form-control" })
                                    <br />
                                    @Html.ValidationMessageFor(a => a.Survey, "", new { @class = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="">
                                <label style="display:block;"> Survey Type</label>
                                @Html.RadioButton("Questiontype", "MCQ", true, new { id = "MCQ", @style = "border:none; Height:inherit" }) <span style="margin-right:15px;">MCQ</span>
                                @Html.RadioButton("Questiontype", "Text", true, new { id = "Text", @style = "border:none; Height:inherit" }) <span id="spntxt">Text</span>
                                @Html.ValidationMessageFor(a => a.QuestionType, "", new { @class = "required" })
                            </div>
                        </div>
                        <div class="" style="display:block; float:left; height:1px; width:100%;"></div>
                        <div class="col-md-6">
                            <div class="">
                                <label>Question Title</label>
                                @Html.TextAreaFor(a => a.QuestionTitle, 5, 50, new { @class = "form-control", @style = "Width:100%; Height:60px" })
                                <br />
                                @Html.ValidationMessageFor(a => a.QuestionTitle, "", new { @class = "required" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="">
                                <label>Option A</label>
                                @Html.TextAreaFor(a => a.OptionA, 5, 50, new { @class = "form-control", @style = "Width:100%; Height:60px" })
                                <br />
                                @Html.ValidationMessageFor(a => a.OptionA, "", new { @class = "required" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="">
                                <label>Option B<span class="required">*</span></label>
                                @Html.TextAreaFor(a => a.OptionB, 5, 50, new { @class = "form-control", @style = "Width:100%; Height:60px" })
                                <br />
                                @Html.ValidationMessageFor(a => a.OptionB, "", new { @class = "required" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="">
                                <label>Option C</label>
                                @Html.TextAreaFor(a => a.OptionC, 5, 50, new { @class = "form-control", @style = "Width:100%; Height:60px" })
                                <br />
                                @Html.ValidationMessageFor(a => a.OptionC, "", new { @class = "required" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="">
                                <label>Option D</label>
                                @Html.TextAreaFor(a => a.OptionD, 5, 50, new { @class = "form-control", @style = "Width:100%; Height:60px" })
                                <br />
                                @Html.ValidationMessageFor(a => a.OptionD, "", new { @class = "required" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="">
                                <label>Option E</label>
                                @Html.TextAreaFor(a => a.OptionE, 5, 50, new { @class = "form-control", @style = "Width:100%; Height:60px" })
                                <br />
                                @Html.ValidationMessageFor(a => a.OptionE, "", new { @class = "required" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="">
                                <label> Start Date <span class="required">*</span></label>
                                <input id="stdate" type="text" class="date form-control" name="startdate" />
                                <br />
                                <span id="sdate" class="required"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="">
                                <label> End Date <span class="required">*</span></label>
                                <input id="etdate" type="text" class="date form-control" name="enddate" />
                                <br />
                                <span id="edate" class="required newLine"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label style="display:block;">Correct Answer</label>
                                @Html.RadioButton("CorrectAns", "OptionA", new { id = "OptionAAns", @style = "border:none; Height:inherit" }) <span style="margin-right:15px;">A</span>
                                @Html.RadioButton("CorrectAns", "OptionB", new { id = "OptionBAns", @style = "border:none; Height:inherit" }) <span style="margin-right:15px;">B</span>
                                @Html.RadioButton("CorrectAns", "OptionC", new { id = "OptionCAns", @style = "border:none; Height:inherit" }) <span style="margin-right:15px;">C</span>
                                @Html.RadioButton("CorrectAns", "OptionD", new { id = "OptionDAns", @style = "border:none; Height:inherit" }) <span style="margin-right:15px;">D</span>
                                @Html.RadioButton("CorrectAns", "OptionE", new { id = "OptionEAns", @style = "border:none; Height:inherit" }) <span>E</span>
                                <br />
                                @Html.ValidationMessageFor(a => a.CorrectAns, "", new { @class = "required" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Status</label>
                                <input type="checkbox" checked="checked" name="statusC" style="border:none; Height:inherit" />
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="submit" class="submitBtn" value="Submit" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

