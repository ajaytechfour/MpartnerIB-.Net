font-size: 1em;
}
table ul.links li {
padding: 0 1em 0 0;
}
</style> 

@Html.ActionLink("Create New Banner", "Index", null, new { style="font-size: 18px;color: white;background-color: #4B99AD;"})
<div style="height: 800px;overflow: scroll;"> 
<table id="Grid" width="100%">
<thead>
<tr>
<th>
Banner Header
</th>
<th>
Sub Header
</th>
<th>
Description
</th>
<th>
Start Date
</th>
<th>
End Date
</th>
<th>
Status
</th>
<th>
Image
</th>
<th>
Action
</th>
</tr>
</thead>
@foreach (var banner in Model)
{ 
<tr>
<td class="organisationname">
@Html.DisplayFor(model => banner.Header_Details)
</td>
<td class="organisationname">
@Html.DisplayFor(model => banner.Sub_Header_Details)
</td>
<td id="HideDetails" class="organisationname">
@Html.DisplayFor(model => banner.Banner_Details)
</td>
<td class="organisationname">

@Html.DisplayFor(model => banner.stardate)
</td>
<td class="organisationname">
@Html.DisplayFor(model => banner.ExpriyDate)
</td>
<td class="organisationname">
@{
    if (banner.BStatus == 0)
    { 
    <text>Dective</text>
    }
    else { 
    <text>Active</text>
    }

}
</td>

<td class="organisationname">
<img src="~/Banners/@banner.BannerImage" style="height: 52px;width: 53px;" title="@banner.BannerFileName" />
</td>
<td class="actions">
@Html.ActionLink("Edit", "Edit", new { id = banner.id })

<a onclick="Delete(@banner.id);" style="cursor:pointer">Delete</a>
</td>
</tr>
}
</table>
</div>

@Html.PagedListPager(Model, page => Url.Action("BannerList", new { page }), new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded })


