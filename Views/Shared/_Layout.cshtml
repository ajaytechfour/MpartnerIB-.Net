                <li class="dropdown">
                    <span><img src="/images/profileImg.png" alt="" title=""> Welcome</span>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        @*Admin
                        <i class="fa fa-caret-down"></i>*@
                        @if ((string)Session["userid"].ToString() != "")
                        {
                            <span>@Session["userid"].ToString()</span> <i class="fa fa-caret-down"></i>
                        }

                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        @*<li>
                            <a href="#">User Profile</a>
                        </li>
                        <li>
                            <a href="#">Settings</a>
                        </li>*@
                        <li>
                            <a href="/Logout/Logout/">Logout</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- Left side menu section start here -->
            <div class="navbar-default sidebar">
                <div class="sidebar-nav navbar-collapse" aria-expanded="false" style="height: 1px;">
                    <ul class="nav in" id="side-menu">

                        @Html.Partial("_SideBarMenu");
                    </ul>
                </div>
            </div>
            <!-- End -->
        </nav>

        <!-- jQuery Start Here -->
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
